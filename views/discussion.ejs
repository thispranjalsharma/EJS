<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Discussion</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <%- include("__header.ejs") %>

    <div class="discussion-container">
      <!-- Ask Question Section -->
      <div class="question-section">
        <h2 class="section-title">Ask a Question</h2>
        <div class="question-form-card">
          <form
            action="/discussion/ask"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <textarea
                name="question"
                class="form-input"
                placeholder="What's on your mind?"
                required
                rows="4"
              ></textarea>
            </div>

            <!-- Collapsible Media Upload -->
            <div class="media-upload-section">
              <button
                type="button"
                class="media-toggle-btn"
                onclick="toggleMediaUpload()"
              >
                <span class="media-icon">ðŸ“Ž</span>
                <span class="media-text">Add Media</span>
                <span class="toggle-arrow">â–¼</span>
              </button>
              <div
                class="media-upload-wrapper"
                id="mediaUpload"
                style="display: none"
              >
                <input
                  type="file"
                  name="media"
                  class="media-input"
                  accept="image/*,video/*"
                />
                <div class="media-hint">Upload images or videos</div>
              </div>
            </div>

            <button type="submit" class="submit-btn">
              <span class="btn-icon">ðŸ’¬</span>
              Post Question
            </button>
          </form>
        </div>
      </div>

      <!-- Discussions Section -->
      <div class="discussions-section">
        <h3 class="discussions-title">Recent Discussions</h3>

        <% questions.forEach(q => { %>
        <div class="discussion-card">
          <div class="discussion-header">
            <div class="user-info">
              <img
                src="/user_post/<%= q.profile %>"
                alt="<%= q.name %>"
                class="user-avatar"
              />
              <strong class="user-name"><%= q.name %></strong>
            </div>
          </div>

          <div class="discussion-body">
            <p class="question-text"><%= q.question %></p>
            <% if (q.media) { %>
            <div class="media-container">
              <img
                src="/discussion/<%= q.media %>"
                class="discussion-media"
                alt="Question media"
              />
            </div>
            <% } %>

            <!-- Reply Form -->
            <form
              action="/discussion/reply/<%= q.id %>"
              method="POST"
              enctype="multipart/form-data"
              class="reply-form"
            >
              <div class="reply-input-group">
                <input
                  type="text"
                  name="reply"
                  class="reply-input"
                  placeholder="Write a reply..."
                  required
                />

                <!-- Collapsible Media Upload for Replies -->
                <button
                  type="button"
                  class="reply-media-btn"
                  onclick="toggleReplyMedia('<%= q.id %>')"
                >
                  <span class="media-icon">ðŸ“Ž</span>
                </button>
              </div>

              <div
                class="reply-media-wrapper"
                id="replyMedia<%= q.id %>"
                style="display: none"
              >
                <input
                  type="file"
                  name="media"
                  class="media-input"
                  accept="image/*,video/*"
                />
              </div>

              <button type="submit" class="reply-btn">Reply</button>
            </form>

            <!-- Replies -->
            <div class="replies-container">
              <% replies.filter(r => r.question_id === q.id).forEach(r => { %>
              <div class="reply-item">
                <div class="reply-user">
                  <img
                    src="/user_post/<%= r.profile %>"
                    alt="<%= r.name %>"
                    class="reply-avatar"
                  />
                  <strong class="reply-name"><%= r.name %></strong>
                </div>
                <p class="reply-text"><%= r.reply %></p>
                <% if (r.media) { %>
                <div class="reply-media-container">
                  <img
                    src="/discussion/<%= r.media %>"
                    class="reply-media"
                    alt="Reply media"
                  />
                </div>
                <% } %>
              </div>
              <% }) %>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <style>
      @import url("https://fonts.googleapis.com/css2?family=Futura:wght@300;400;500;600;700&display=swap");

      body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: "Futura", "Arial", sans-serif;
        margin: 0;
        padding: 0;
      }

      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
          135deg,
          rgba(102, 126, 234, 0.1) 0%,
          rgba(118, 75, 162, 0.1) 100%
        );
        pointer-events: none;
        z-index: -1;
      }

      .discussion-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
        position: relative;
        z-index: 1;
      }

      .section-title {
        font-family: "Futura", "Arial", sans-serif;
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        text-align: center;
        margin-bottom: 30px;
        text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        letter-spacing: -1px;
        animation: slideDown 0.8s ease-out;
      }

      .question-section {
        margin-bottom: 50px;
        animation: fadeInUp 1s ease-out 0.2s both;
      }

      .question-form-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        padding: 30px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .question-form-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
        background: rgba(255, 255, 255, 0.15);
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-input {
        width: 100%;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        padding: 15px 20px;
        color: white;
        font-size: 1rem;
        font-family: "Futura", "Arial", sans-serif;
        transition: all 0.3s ease;
        resize: vertical;
      }

      .form-input:focus {
        outline: none;
        border-color: rgba(255, 255, 255, 0.5);
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
      }

      .form-input::placeholder {
        color: rgba(255, 255, 255, 0.6);
      }

      .media-upload-section {
        margin-bottom: 20px;
      }

      .media-toggle-btn {
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        padding: 12px 20px;
        color: white;
        font-family: "Futura", "Arial", sans-serif;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
        width: fit-content;
      }

      .media-toggle-btn:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
      }

      .media-icon {
        font-size: 1.2rem;
      }

      .toggle-arrow {
        font-size: 0.8rem;
        transition: transform 0.3s ease;
      }

      .toggle-arrow.rotated {
        transform: rotate(180deg);
      }

      .media-upload-wrapper {
        margin-top: 15px;
        padding: 15px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        animation: slideDown 0.3s ease-out;
      }

      .media-input {
        width: 100%;
        background: rgba(255, 255, 255, 0.1);
        border: 2px dashed rgba(255, 255, 255, 0.3);
        border-radius: 10px;
        padding: 15px;
        color: white;
        font-family: "Futura", "Arial", sans-serif;
      }

      .media-hint {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.9rem;
        margin-top: 8px;
        text-align: center;
      }

      .submit-btn {
        background: linear-gradient(45deg, #4ecdc4, #44a08d);
        color: white;
        border: none;
        padding: 15px 30px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1rem;
        font-family: "Futura", "Arial", sans-serif;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 8px 25px rgba(78, 205, 196, 0.3);
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .submit-btn:hover {
        transform: translateY(-3px) scale(1.05);
        box-shadow: 0 15px 35px rgba(78, 205, 196, 0.4);
      }

      .btn-icon {
        font-size: 1.2rem;
      }

      .discussions-section {
        animation: fadeInUp 1s ease-out 0.4s both;
      }

      .discussions-title {
        font-size: 2rem;
        font-weight: 600;
        color: white;
        text-align: center;
        margin-bottom: 30px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
      }

      .discussion-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        margin-bottom: 30px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
      }

      .discussion-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
        background: rgba(255, 255, 255, 0.15);
      }

      .discussion-header {
        padding: 20px 25px 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      .user-info {
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .user-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        border: 3px solid rgba(255, 255, 255, 0.6);
        object-fit: cover;
        transition: all 0.3s ease;
      }

      .user-avatar:hover {
        transform: scale(1.1);
        border-color: white;
      }

      .user-name {
        color: white;
        font-size: 1.2rem;
        font-weight: 600;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
      }

      .discussion-body {
        padding: 25px;
      }

      .question-text {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 20px;
      }

      .media-container {
        margin-bottom: 20px;
        border-radius: 15px;
        overflow: hidden;
      }

      .discussion-media {
        width: 100%;
        height: auto;
        border-radius: 15px;
        transition: transform 0.3s ease;
      }

      .discussion-media:hover {
        transform: scale(1.02);
      }

      .reply-form {
        margin-bottom: 25px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
      }

      .reply-input-group {
        display: flex;
        gap: 10px;
        margin-bottom: 15px;
      }

      .reply-input {
        flex: 1;
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        padding: 12px 20px;
        color: white;
        font-family: "Futura", "Arial", sans-serif;
        transition: all 0.3s ease;
      }

      .reply-input:focus {
        outline: none;
        border-color: rgba(255, 255, 255, 0.5);
        background: rgba(255, 255, 255, 0.15);
      }

      .reply-input::placeholder {
        color: rgba(255, 255, 255, 0.6);
      }

      .reply-media-btn {
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        width: 45px;
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .reply-media-btn:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: scale(1.1);
      }

      .reply-media-wrapper {
        margin-bottom: 15px;
        animation: slideDown 0.3s ease-out;
      }

      .reply-btn {
        background: linear-gradient(45deg, #ff6b6b, #ee5a24);
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 20px;
        font-weight: 600;
        font-family: "Futura", "Arial", sans-serif;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.3px;
      }

      .reply-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(255, 107, 107, 0.3);
      }

      .replies-container {
        border-left: 3px solid rgba(255, 255, 255, 0.2);
        padding-left: 20px;
      }

      .reply-item {
        margin-bottom: 20px;
        padding: 15px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        transition: all 0.3s ease;
      }

      .reply-item:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(5px);
      }

      .reply-user {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 8px;
      }

      .reply-avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        border: 2px solid rgba(255, 255, 255, 0.4);
        object-fit: cover;
      }

      .reply-name {
        color: white;
        font-size: 1rem;
        font-weight: 500;
      }

      .reply-text {
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 10px;
        font-size: 0.95rem;
        line-height: 1.5;
      }

      .reply-media-container {
        border-radius: 10px;
        overflow: hidden;
      }

      .reply-media {
        width: 80%;
        height: auto;
        border-radius: 10px;
        transition: transform 0.3s ease;
      }

      .reply-media:hover {
        transform: scale(1.02);
      }

      /* Animations */
      @keyframes slideDown {
        from {
          opacity: 0;
          transform: translateY(-20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .discussion-container {
          padding: 30px 15px;
        }

        .section-title {
          font-size: 2rem;
        }

        .question-form-card {
          padding: 20px;
        }

        .discussion-body {
          padding: 20px;
        }

        .reply-input-group {
          flex-direction: column;
        }

        .reply-media-btn {
          align-self: flex-start;
        }
      }

      @media (max-width: 480px) {
        .section-title {
          font-size: 1.8rem;
        }

        .discussions-title {
          font-size: 1.6rem;
        }

        .question-form-card,
        .discussion-body {
          padding: 15px;
        }

        .user-avatar {
          width: 40px;
          height: 40px;
        }

        .reply-avatar {
          width: 30px;
          height: 30px;
        }
      }
    </style>

    <script>
      function toggleMediaUpload() {
        const mediaUpload = document.getElementById("mediaUpload");
        const arrow = document.querySelector(".toggle-arrow");

        if (mediaUpload.style.display === "none") {
          mediaUpload.style.display = "block";
          arrow.classList.add("rotated");
        } else {
          mediaUpload.style.display = "none";
          arrow.classList.remove("rotated");
        }
      }

      function toggleReplyMedia(questionId) {
        const replyMedia = document.getElementById("replyMedia" + questionId);

        if (replyMedia.style.display === "none") {
          replyMedia.style.display = "block";
        } else {
          replyMedia.style.display = "none";
        }
      }
    </script>
  </body>
</html>
