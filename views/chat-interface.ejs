<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Chat</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <style>
      body {
        background: #f4f4f4;
      }
      .chat-box {
        max-width: 800px;
        margin: auto;
        margin-top: 50px;
        background: #fff;
        border-radius: 10px;
        padding: 20px;
        height: 600px;
        overflow-y: scroll;
      }
      .msg {
        display: flex;
        margin-bottom: 10px;
      }
      .msg.sent {
        justify-content: flex-end;
      }
      .msg.received {
        justify-content: flex-start;
      }
      .bubble {
        padding: 10px 15px;
        border-radius: 15px;
        max-width: 60%;
        background-color: #e2e8f0;
      }
      .sent .bubble {
        background-color: #38bdf8;
        color: white;
      }
      .chat-form {
        display: flex;
        gap: 10px;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <%- include("__header.ejs") %>
    <div class="chat-box">
      <% messages.forEach(msg => { %>
      <div class="msg <%= msg.sender_id === userId ? 'sent' : 'received' %>">
        <div class="bubble">
          <%= msg.message %>
          <div class="text-muted small mt-1" style="font-size: 10px">
            <%= new Date(msg.created_at).toLocaleTimeString() %>
          </div>
        </div>
      </div>
      <% }) %>

      <form class="chat-form" action="/chat/send" method="POST">
        <input type="hidden" name="to" value="<%= friendId %>" />
        <input
          type="text"
          name="message"
          class="form-control"
          placeholder="Type a message..."
          required
        />
        <button class="btn btn-primary">Send</button>
      </form>
    </div>
  </body>
</html>
