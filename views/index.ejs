<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Social Feed</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Futura:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Futura", "Arial", sans-serif;
        background-color: #f8f9fa;
        color: #333;
        line-height: 1.6;
      }

      .main {
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .feed-container {
        max-width: 600px;
        width: 100%;
        margin: 20px auto;
        padding: 0 15px;
      }

      .feed-title {
        text-align: center;
        margin-bottom: 30px;
        font-size: 24px;
        font-weight: 600;
        color: #333;
        position: relative;
        padding-bottom: 15px;
      }

      .feed-title::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 2px;
      }

      .post-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        margin-bottom: 25px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        border: 1px solid rgba(0, 0, 0, 0.05);
        animation: fadeIn 0.6s ease-out forwards;
        opacity: 0;
        transform: translateY(20px);
      }

      @keyframes fadeIn {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
      }

      .post-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      }

      .post-user {
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .post-user-img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #667eea;
        padding: 2px;
        background: white;
        transition: all 0.3s ease;
      }

      .post-user:hover .post-user-img {
        transform: scale(1.1);
        border-color: #764ba2;
      }

      .post-user-name {
        font-weight: 600;
        font-size: 15px;
        color: #333;
        transition: color 0.3s ease;
      }

      .post-user:hover .post-user-name {
        color: #667eea;
      }

      .post-time {
        font-size: 13px;
        color: #999;
        font-weight: 500;
      }

      .post-image-container {
        position: relative;
        width: 100%;
        padding-top: 100%; /* 1:1 Aspect Ratio */
        overflow: hidden;
        background: #f8f9fa;
      }

      .post-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
      }

      .post-card:hover .post-image {
        transform: scale(1.03);
      }

      .post-caption {
        padding: 15px;
        font-size: 14px;
        line-height: 1.5;
        color: #333;
      }

      .post-actions {
        display: flex;
        padding: 0 15px 15px;
        gap: 20px;
      }

      .post-action {
        display: flex;
        align-items: center;
        gap: 5px;
        color: #666;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .post-action:hover {
        color: #667eea;
        transform: scale(1.05);
      }

      .post-action-icon {
        font-size: 18px;
      }

      .empty-feed {
        text-align: center;
        padding: 50px 20px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      }

      .empty-feed-icon {
        font-size: 50px;
        margin-bottom: 20px;
        color: #ddd;
      }

      .empty-feed-text {
        font-size: 18px;
        color: #999;
        font-weight: 500;
      }

      /* Animation for staggered loading */
      .post-card:nth-child(1) {
        animation-delay: 0.1s;
      }
      .post-card:nth-child(2) {
        animation-delay: 0.2s;
      }
      .post-card:nth-child(3) {
        animation-delay: 0.3s;
      }
      .post-card:nth-child(4) {
        animation-delay: 0.4s;
      }
      .post-card:nth-child(5) {
        animation-delay: 0.5s;
      }

      /* Shimmer effect for loading */
      @keyframes shimmer {
        0% {
          background-position: -200% 0;
        }
        100% {
          background-position: 200% 0;
        }
      }

      .loading-shimmer {
        background: linear-gradient(
          90deg,
          #f0f0f0 25%,
          #e0e0e0 50%,
          #f0f0f0 75%
        );
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
      }

      /* Responsive design */
      @media (max-width: 768px) {
        .feed-container {
          padding: 0 10px;
        }

        .post-header {
          padding: 12px;
        }

        .post-caption {
          padding: 12px;
          font-size: 13px;
        }

        .post-user-img {
          width: 35px;
          height: 35px;
        }

        .post-user-name {
          font-size: 14px;
        }
      }

      /* Double-tap effect */
      .heart-animation {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0);
        color: white;
        font-size: 80px;
        opacity: 0;
        z-index: 10;
        pointer-events: none;
        text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
      }

      .heart-animation.active {
        animation: heartBeat 1s forwards;
      }

      @keyframes heartBeat {
        0% {
          transform: translate(-50%, -50%) scale(0);
          opacity: 0;
        }
        15% {
          transform: translate(-50%, -50%) scale(1.2);
          opacity: 1;
        }
        30% {
          transform: translate(-50%, -50%) scale(1);
          opacity: 1;
        }
        45% {
          transform: translate(-50%, -50%) scale(1.1);
          opacity: 1;
        }
        60% {
          transform: translate(-50%, -50%) scale(1);
          opacity: 1;
        }
        100% {
          transform: translate(-50%, -50%) scale(0);
          opacity: 0;
        }
      }
    </style>
  </head>
  <body>
    <div class="main">
      <!-- header -->
      <%-include("__header.ejs") %>

      <div class="feed-container">
        <!-- <h2 class="feed-title">Your Feed</h2> -->

        <% if (typeof posts !== 'undefined' && posts.length > 0) { %> <%
        posts.forEach((post, index) => { %>
        <div class="post-card">
          <div class="post-header">
            <div class="post-user">
              <img
                src="/user_post/<%= post.profile %>"
                class="post-user-img"
                alt="<%= post.userId %>'s profile"
                onerror="this.src='/default-profile.png'"
              />
              <span class="post-user-name"><%= post.userId %></span>
            </div>
            <div class="post-time" data-time="<%= post.created_at %>"></div>
          </div>

          <div
            class="post-image-container"
            ondblclick="showHeartAnimation(this)"
          >
            <img
              src="/post_uploads/<%= post.postImage %>"
              class="post-image"
              alt="<%= post.caption %>"
              onerror="this.src='/default.png'"
            />
            <div class="heart-animation">‚ù§Ô∏è</div>
          </div>

          <div class="post-caption">
            <strong><%= post.userId %></strong> <%= post.caption %>
          </div>

          <div class="post-actions">
            <div class="post-action" onclick="toggleLike(this)">
              <span class="post-action-icon">‚ô°</span>
              <span>Like</span>
            </div>
            <div class="post-action">
              <span class="post-action-icon">üí¨</span>
              <span>Comment</span>
            </div>
            <div class="post-action">
              <span class="post-action-icon">‚ÜóÔ∏è</span>
              <span>Share</span>
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <div class="empty-feed">
          <div class="empty-feed-icon">üì∑</div>
          <p class="empty-feed-text">No posts to show.</p>
          <p>Follow some users or create your first post!</p>
        </div>
        <% } %>
      </div>

      <%-include("footer.ejs") %>
    </div>

    <script>
      // Format time function
      function formatTime(dateString) {
        const date = new Date(dateString);
        const now = new Date();
        const diffMs = now - date;
        const diffSec = Math.floor(diffMs / 1000);
        const diffMin = Math.floor(diffSec / 60);
        const diffHour = Math.floor(diffMin / 60);
        const diffDay = Math.floor(diffHour / 24);

        if (diffDay > 7) {
          return date.toLocaleDateString();
        } else if (diffDay > 0) {
          return `${diffDay}d ago`;
        } else if (diffHour > 0) {
          return `${diffHour}h ago`;
        } else if (diffMin > 0) {
          return `${diffMin}m ago`;
        } else {
          return "Just now";
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll(".post-time").forEach((el) => {
          const raw = el.getAttribute("data-time");
          if (raw) {
            el.textContent = formatTime(raw);
          }
        });

        const posts = document.querySelectorAll(".post-card");
        posts.forEach((post, index) => {
          post.style.animationDelay = `${0.1 * index}s`;
        });
      });

      // Double-tap/click to like
      let lastTap = 0;
      function showHeartAnimation(element) {
        const heart = element.querySelector(".heart-animation");
        const now = new Date().getTime();
        const timeSince = now - lastTap;

        if (timeSince < 300 && timeSince > 0) {
          // Double tap detected
          heart.classList.add("active");

          // Toggle like
          const postCard = element.closest(".post-card");
          const likeButton = postCard.querySelector(".post-action");
          toggleLike(likeButton);

          setTimeout(() => {
            heart.classList.remove("active");
          }, 1000);
        }

        lastTap = now;
      }

      // Toggle like function
      function toggleLike(element) {
        const icon = element.querySelector(".post-action-icon");
        const text = element.querySelector("span:last-child");

        if (icon.innerHTML === "‚ô°") {
          icon.innerHTML = "‚ù§Ô∏è";
          text.innerHTML = "Liked";
          element.style.color = "#e74c3c";
        } else {
          icon.innerHTML = "‚ô°";
          text.innerHTML = "Like";
          element.style.color = "";
        }
      }

      // Add staggered animation to posts
      document.addEventListener("DOMContentLoaded", function () {
        const posts = document.querySelectorAll(".post-card");
        posts.forEach((post, index) => {
          post.style.animationDelay = `${0.1 * index}s`;
        });
      });
    </script>
  </body>
</html>
