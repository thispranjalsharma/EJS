<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upload Post</title>
    <%- include("__bootstrap.ejs") %>
    <style>
      .container {
        max-width: 600px;
      }
      .form-section {
        margin-top: 50px;
        padding: 30px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="form-section">
        <h2 class="text-center mb-4">Upload a New Post</h2>
        <form
          action="/user/upload-post"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group mb-3">
            <label for="postImage">Choose Image</label>
            <input
              type="file"
              class="form-control"
              name="postImage"
              id="postImage"
              required
            />
          </div>

          <div class="form-group mb-3">
            <label for="caption">Caption (optional)</label>
            <input
              type="text"
              class="form-control"
              name="caption"
              id="caption"
              placeholder="Enter a caption..."
            />
          </div>

          <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Upload Post</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
