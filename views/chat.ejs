<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Posts</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <%-include("__header.ejs") %>

    <div class="container mt-5">
      <h2 class="text-center">All USers</h2>
      <table class="table table-bordered mt-4">
        <thead>
          <tr>
            <th>Image</th>
            <th>User Name</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(post => { %>
          <tr>
            <td>
              <img
                src="/user_post/<%= post?.profile %>"
                width="80"
                height="80"
                style="object-fit: cover"
                alt="oo"
              />
            </td>
            <td><%= post.name %></td>
            <td>
              <a href="/chat/<%= post.id %>" class="btn btn-primary">Chat</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
